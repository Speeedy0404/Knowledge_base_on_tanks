concept_Colossal_heavy_tank=> nrel_main_idtf: [Colossal heavy tank](*<- lang_en;;*);;


definition -> ...
(*
    -> rrel_key_sc_element: concept_Colossal_heavy_tank;;
    <= nrel_sc_text_translation:...
        (*
            -> [Тяжелый танк «Колоссаль» -  немецкий сверхтяжёлый танк периода Первой мировой войны.](*<- lang_ru;;*);;

	        -> [The Colossal heavy tank is a German super-heavy tank of the period of the First World War.](*<- lang_en;;*);;
        *);;
    => nrel_main_idtf: [Опр.(тяжелый танк «Колоссаль»)](*<- lang_ru;;*);;
    => nrel_main_idtf: [Def.(Colossal heavy tank](*<- lang_en;;*);;
